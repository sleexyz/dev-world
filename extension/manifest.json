{
  "name": "dev-world",
  "description": "Develop everywhere",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "devtools_page": "devtools_page.html",
  "action": {},
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"

  },
  "host_permissions": ["*://*/*"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "MacCtrl+B"
      },
      "description": "Open dev-world on the current page."
    }
  }
}
